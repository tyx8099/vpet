{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LVGL Demo",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "lvgl_demo.cpp",
                "-std=c++11",
                "-Wall",
                "-Wextra",
                "-DLV_CONF_INCLUDE_SIMPLE",
                "-DLVGL_SIMULATOR",
                "-I.",
                "-Ilvgl",
                "-Ilvgl/lvgl",
                "-Ilvgl/lv_drivers",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lgdi32",
                "-luser32",
                "-lwinmm",
                "-o",
                "LVGL_vpet_Demo.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build LVGL VPet Demo with g++"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "lvgl_demo.cpp",
                "-std=c++11",
                "-g",
                "-Wall",
                "-Wextra",
                "-DLV_CONF_INCLUDE_SIMPLE",
                "-DLVGL_SIMULATOR",
                "-I.",
                "-Ilvgl",
                "-Ilvgl/lvgl",
                "-Ilvgl/lv_drivers",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lgdi32",
                "-luser32",
                "-lwinmm",
                "-o",
                "LVGL_vpet_Demo_debug.exe"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build LVGL VPet Demo with debug symbols"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "del /Q *.exe 2>nul || echo No executables to clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Clean compiled executables"
        },
        {
            "label": "Convert Sprites",
            "type": "shell",
            "command": "python",
            "args": [
                "convert_sprites.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "detail": "Convert PNG sprites to LVGL C arrays"
        },
        {
            "label": "Run Demo",
            "type": "shell",
            "command": "${workspaceFolder}/LVGL_vpet_Demo.exe",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build LVGL Demo",
            "detail": "Build and run the LVGL demo"
        }
    ]
}
